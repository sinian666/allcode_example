def test_addition():
    assert 1 + 1 == 2
    assert 2 + 2 == 4
    assert 3 + 3 == 6

def test_subtraction():
    assert 2 - 1 == 1
    assert 4 - 2 == 2
    assert 6 - 3 == 3

def test_multiplication():
    assert 1 * 1 == 1
    assert 2 * 2 == 4
    assert 3 * 3 == 9

def test_division():
    assert 2 / 1 == 2
    assert 4 / 2 == 2
    assert 6 / 3 == 2
